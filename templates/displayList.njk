{% set pageTitle = currentLearnItem.name %}

{% extends "base.njk" %}

{% block content %}

  <span class="h3">{{pageTitle}}</span>
  <div class="progress col-12">
    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
  </div>
  {% for introItem in currentLearnItem.intro %}
    <p>{{introItem | safe}}</p>
  {% endfor %}

  {% for itemGroup in currentLearnItem.itens %}
    <div class="row g-2">

      <div class="col-12">
        <div class="card col-md-12">
          <div class="card-body">
            <h2>O b√°sico</h2>
            <div class="progress col-12">
              <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>

      </div>

      {% for learnItem in itemGroup.itens %}
        <div class="col-md-4 learn-item">
          <div class="card col-md-12">
            <div class="card-body">
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch">
              </div>
              <img src="{{learnItem.img}}" alt="{{learnItem.name}}" class="card-img-top">
              {{learnItem.name}}:

              <a href="{{learnItem.url}}" target="_blank" class="btn btn-primary">Go to Trailhead</a>

            </div>
          </div>
        </div>

      {% endfor %}

    </div>
  {% endfor %}

