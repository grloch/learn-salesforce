<div class="row g-2 learn-group" aria-group-id="{{learnGroup.id}}">

    <div class="col-12">
        <div class="card col-md-12">
            <div class="card-body">
                <h2>{{learnGroup.name}}</h2>
                <p>{{learnGroup.intro | safe}}</p>

                <div class="progress col-12">
                    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" aria-count-itens="0" aria-group-id="{{learnGroup.id}}"></div>
                </div>
            </div>
        </div>

    </div>

    {% for item in learnGroup.itens %}
        {% include "learn/item.njk" %}
    {% endfor %}

</div>